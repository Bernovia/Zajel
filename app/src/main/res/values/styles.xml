<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>

    </style>

    <style name="button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/proxima_nova_semi_bold</item>
        <item name="fontFamily">@font/proxima_nova_semi_bold</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>

    </style>

    <style name="edittext_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/sub_text_color_with_opacity</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="text_bold_26_black">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="text_regular_16_grey">
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>


</resources>
