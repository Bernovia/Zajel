<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:ignore="MissingPrefix">

            <ScrollView
                android:id="@+id/activity_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/footer_LinearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/name_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/user_name_TextView"
                            style="@style/page_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="5dp"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_books_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/my_books" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/update_password_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/update_password" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/terms_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/terms_and_conditions"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/privacy_policy_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/privacy_policy"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/about_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/about" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rate_us_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/rate_us"

                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/logout_RelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/divider" />

                        <TextView
                            style="@style/text_regular_16_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="22dp"
                            android:text="@string/logout"

                            />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/footer_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/app_logo"
                    app:tint="@color/divider" />

                <TextView
                    android:id="@+id/version_number_TextView"
                    style="@style/text_regular_16_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@id/empty_screen_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@id/empty_screen_TextView"
                style="@style/text_regular_16_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/you_don_t_have_any_received_requests_yet" />


            <Button
                android:id="@id/empty_screen_button"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_rounded"
                android:text="@string/browse_books" />


        </LinearLayout>

    </RelativeLayout>
</layout>