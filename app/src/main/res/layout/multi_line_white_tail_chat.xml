<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >

        <TextView
                android:id="@+id/date_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/small_round_background"
                app:fontFamily="@font/proxima_nova_regular"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="5/1/2016"
                android:textColor="#FF4A4A4A"
                android:textSize="14sp"/>

        <LinearLayout
                tools:ignore="MissingPrefix"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_below="@+id/date_TextView"
                android:gravity="start"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_CircleImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="5dp"
                 />

            <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:minWidth="140dp"
                    android:background="@drawable/white_short_tail"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/message_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-2dp"
                        app:fontFamily="@font/proxima_nova_regular"
                        android:gravity="center_vertical"
                        android:maxWidth="240dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="2dp"
                        android:text="e ! "
                        android:textColor="@color/text_color"
                        android:textSize="18sp"/>


                <TextView
                        android:id="@+id/time_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        app:fontFamily="@font/proxima_nova_regular"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:text="XX:XX am"
                        android:textColor="#78000000"
                        android:textSize="16sp"/>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
