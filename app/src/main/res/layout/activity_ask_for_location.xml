<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_40sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_50sdp"
        app:layout_constraintCircleRadius="4dp">


        <TextView
            android:id="@+id/location_title_TextView"
            style="@style/text_bold_26_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/oops" />

        <TextView
            android:id="@+id/location_message_TextView"
            style="@style/text_regular_16_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/you_need_to_allow_access_to_location_in_order_to_use_sugarbook_nplease_try_again_and_hit_ok" />

        <Button
            android:id="@+id/location_Button"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/try_again" />

    </LinearLayout>

</layout>


